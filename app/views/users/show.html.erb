<div class="mb-3">
  <h2><%= @user.name %>さんの投稿一覧</h2>
  <%#= render @user.posts %>
  <% @user.posts.each do |post| %>
    <ul>
      <li><%= link_to post.title, post %></li>
    </ul>
  <% end %>
</div>

<div class="mb-3">
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
