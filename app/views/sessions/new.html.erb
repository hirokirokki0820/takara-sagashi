<h1>ログイン</h1>
<%= form_with(scope: :session, model: @user, url: login_path, local: true) do |f| %>
  <div>
    <%= f.label "ユーザー名"%>
    <%= f.text_field :name, placeholder: "ユーザー名を入力してください"%>
  </div>

  <div>
    <%= f.label "パスワード"%>
    <%= f.password_field :password, placeholder: "パスワードを入力してください" %>
  </div>

  <div>
    <%= f.submit "ログイン", class: "btn btn-primary float-start mt-2" %>
  </div><br />
<% end %>
